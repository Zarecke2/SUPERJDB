{% extends 'base.html.twig' %}

{% block title %}Connexion !
{% endblock %}

{% block body %}

    <div class="globalConnexion">
        <div class="connexion">
            <span>Connexion</span>
        </div>
    <br>
        <div class="form">
        <form method="post">
            <label for="inputLogin">Nom d'utilisateur :</label>
            <input type="text" value="{{ last_username }}" name="login" id="inputLogin" class="form-control" required autofocus> <br /><br />
            <label for="inputPassword">Mot de passe : &nbsp; &nbsp; &nbsp;</label>
            <input type="password" name="password" id="inputPassword" class="form-control" required>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
        </div>

        <div class="submit">

            <button class="btn btn-lg btn-primary" type="submit">
                Se connecter
            </button>
        </div>

	    </form>
    </div>
        {% if error %}
			<script>
                function errorLoad() {
                alert("Le nom d'utilisateur ou le mot de passe est incorrect !");
                }
	        </script>
            <script>
                errorLoad();
            </script>
		{% endif %}

{% endblock %}
